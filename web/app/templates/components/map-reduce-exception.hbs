<div class="box">
    {{#cp-panel as |p|}}
        {{#p.toggle}}
            <p>{{job.name}}</p>
        {{/p.toggle}}
        {{#p.body}}

            {{#cp-panels class='u-margin-bottom' accordion=true as |panels|}}
                {{#each job.applications as |application|}}
                {{#panels.panel as |p|}}
                    {{#p.toggle}}
                        <p>{{application.name}}</p>
                    {{/p.toggle}}

                    {{#p.body}}
                      {{#if (eq job.type "SPARK")}}
                        {{#each application.exceptionSummary as |exception|}}
                        <div class="box">
                          <pre>{{exception.exceptionStackTrace}}</pre>
                          <pre>{{exception.exceptionTrackingURL}}</pre>
                        </div>
                        {{/each}}
                      {{else}}
                      {{#unless (eq application.exceptionSummary "")}}
                        <pre>{{application.exceptionSummary}}</pre>
                      {{/unless}}
                      {{/if}}

                        {{#each application.tasks as |task|}}
                            {{#cp-panels class='u-margin-bottom' accordion=true as |panels|}}
                            {{#panels.panel as |taskpanel|}}
                                {{#taskpanel.toggle}}
                                    <p>{{task.name}}</p>
                                {{/taskpanel.toggle}}

                                {{#taskpanel.body}}
                                    <pre>{{task.exceptionSummary}}</pre>
                                {{/taskpanel.body}}
                            {{/panels.panel}}
                            {{/cp-panels}}
                        {{/each}}
                      {{#if (eq job.type "SPARK")}}
                        <div class="box">
                          <pre>{{application.exceptionLogSource}}</pre>
                        </div>
                      {{/if}}
                    {{/p.body}}
                {{/panels.panel}}

                {{/each}}
            {{/cp-panels}}
        {{/p.body}}
    {{/cp-panel}}
</div>


